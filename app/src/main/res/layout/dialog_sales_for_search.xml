<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/bill_number_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:text="BILL NUMBER"
                android:textSize="20dp" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/tv_bill_number_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:hint="Bill number"
                android:inputType="number"/>

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/tv_date_id"
                android:layout_marginLeft="1dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:hint="Date"
                android:inputType="number">
                <requestFocus />
            </EditText>
                    </LinearLayout>
        <LinearLayout
            android:id="@+id/LinrLay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:textSize="20dp" />
            <ImageButton
                android:id="@+id/bill_date_search_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:src="@drawable/ic_search_white" />


        </LinearLayout>

        <View
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@color/button_accent" />


        <LinearLayout
            android:id="@+id/LinearLa2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:text="DATE"
                android:textSize="20dp" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/etxt_fromdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/from_date" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:textSize="20dp" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/etxt_todate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/to_date" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinarLay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:textSize="20dp" />
            <ImageButton
                android:id="@+id/fromDate_ToDate_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:src="@drawable/ic_search_white" />


        </LinearLayout>
        <View
            android:id="@+id/texView4"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@color/button_accent" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:text="CUSTOMER"
                android:textSize="20dp" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/tv_customer_name_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:hint="Customer name" />

            <ImageButton
                android:id="@+id/customernamebtn_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/button"
                android:src="@drawable/ic_search_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".59"
                android:text="CONTACT"
                android:textSize="20dp" />

            <EditText
                android:background="@drawable/edittext_bg"
                android:padding="5dp"
                android:id="@+id/tv_customer_contact_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:hint="Customer contact" />

            <ImageButton
                android:id="@+id/customercontactbtn_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:background="@drawable/button"
                android:src="@drawable/ic_search_white" />

        </LinearLayout>
        <View
            android:id="@+id/extView4"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@color/button_accent" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textSize="20dp" />
            <Button
                android:id="@+id/btn_cancel_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:background="@drawable/button_curved"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="#fff"
                android:textSize="20dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:textSize="20dp" />

        </LinearLayout>
    </TableLayout>
</ScrollView>